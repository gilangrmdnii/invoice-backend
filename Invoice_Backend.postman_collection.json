{
	"info": {
		"_postman_id": "invoice-backend-collection",
		"name": "Invoice Backend API",
		"description": "Complete API collection for Invoice Backend.\n\n**Roles:** SPV, FINANCE, OWNER\n\n**Auth:** JWT Bearer token via Authorization header.\n\n**Flow:**\n1. Register user\n2. Login → get token (auto-saved)\n3. Use protected endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{token}}",
				"type": "string"
			}
		]
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [""]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3001/api",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		}
	],
